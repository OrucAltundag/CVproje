@using CV_Proje.Models.Entity
@model List<TBL_SOSYALMEDYA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<h2>SOSYAL MEDYA LİSTESİ</h2>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->

                            <div class="card-body">
                                <button class="btn btn-info" data-toggle="modal" data-target="#modal1">Yeni Platform Ekle</button>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr style="text-align:center">
                                            <th style="width: 10px">#</th>

                                            <th style="text-align:center">SosyalMedya</th>
                                            <th style="text-align:center">Durum</th>
                                            <th style="text-align:center">İşlemler</th>
                                        </tr>
                                    </thead>
                                    <tbody style="text-align:center">
                                        @foreach (var item in Model)
                                        {



                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.AD</td>
                                                <td>
                                                    @if (item.Durum == true)
                                                    {
                                                        <h6 style="color:green">AKTİF</h6>
                                                    }
                                                    else if(item.Durum==false)
                                                    {
                                                        <h6 style="color:darkred">PASİF</h6>
                                                    }
                                                </td>

                                                <td>
                                                    <a href="/SosyalMedya/Sil/@item.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash-restore-alt">Sil</i>
                                                    </a>
                                                    <a href="/SosyalMedya/SayfaGetir/@item.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt">Güncelle</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="modal" id="modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Yeni Platform Ekleme Paneli</h2>
                    </div>,
                    <form action="/SosyalMedya/Ekle" method="post">
                        <div class="modal-body">
                            <label>Sosyal Medya İsmi</label>
                            <input type="text" name="Ad" class="form-control" />
                            <br />
                            <label>Sosyal Medya Linki</label>
                            <input type="text" name="Link" class="form-control" />
                            <br />
                            <label>Sosyal Medya İkonu</label>
                            <input type="text" name="Icon" class="form-control" />
                            <br />
                            <button class="btn btn-info">Ekle</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
