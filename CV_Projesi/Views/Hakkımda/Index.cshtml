@using CV_Proje.Models.Entity
@model List<TBL_HAKKINDA>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda Menüsü</h2>

<br />
<h2>Hakkında Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" name="ad" value="@item.Ad" class="form-control" />
        <label>Soyad</label>
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" />
        <label>Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" />
        <label>Mail</label>
        <input type="text" name="Mail" value="@item.Mail" class="form-control" />
        <label>Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" />
        <label>Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" />
        <label>Hakkında</label>
        <textarea rows="5" class="form-control" name="Hakkında">@item.Hakkında</textarea>
    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>