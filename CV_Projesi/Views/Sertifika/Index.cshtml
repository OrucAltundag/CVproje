@using CV_Proje.Models.Entity
@model List<TBL_SERTIFIKALARIM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-9">
                        <div class="card">
                            <div class="card-header p-2">
                            </div>
                            <div class="card-body">
                                <div class="tab-pane" id="timeline">
                                    <div class="timeline" timeline-inserve>
                                        @foreach (var item in Model)
                                        {
                                        <div class="time-label">
                                           <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success">
                                               <span class="bg-success">
                                                   @item.Tarih
                                               </span>
                                           </a>
                                        </div>
                                        <div>
                                            <i class="fas fa-award bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                            </div>
                                        </div>
                                        }
                                    </div>
                                    <a href="/Sertifika/YeniSertifika" class="btn btn-success">Yeni Sertifika Girişi</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

</body>
</html>

